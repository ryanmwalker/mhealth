<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/new_layout_padding"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_id_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/new_form_element_height"
                android:hint="@string/input_text_id"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/input_pain_wrapper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_form_element_height"
            android:layout_below="@id/input_id_wrapper"
            android:text="@string/input_text_pain" >
        </CheckBox>

        <CheckBox
            android:id="@+id/input_med_wrapper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_form_element_height"
            android:layout_below="@id/input_pain_wrapper"
            android:text="@string/input_text_med" >
        </CheckBox>

        <CheckBox
            android:id="@+id/input_walk_wrapper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_form_element_height"
            android:layout_below="@id/input_med_wrapper"
            android:text="@string/input_text_walk" >
        </CheckBox>

        <TextView
            android:id="@+id/input_label_sex"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/new_form_element_height"
            android:layout_below="@id/input_walk_wrapper"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/new_sex_label_right_padding"
            android:text="@string/input_text_sex" />

        <RadioGroup
            android:id="@+id/input_sex"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/new_form_element_height"
            android:layout_below="@id/input_walk_wrapper"
            android:layout_toEndOf="@id/input_label_sex"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/input_button_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:text="@string/new_sex_male_label" />

            <RadioButton
                android:id="@+id/input_button_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_sex_female_label" />
        </RadioGroup>

        <Button
            android:id="@+id/input_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_sex"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:background="@color/design_default_color_primary"
            android:ems="15"
            android:text="@string/input_button_save"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />
    </RelativeLayout>
</ScrollView>